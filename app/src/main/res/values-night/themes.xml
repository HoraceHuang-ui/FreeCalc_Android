<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FreeCalc_Material3Test" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4bb6e8</item>
        <item name="colorPrimaryVariant">@color/design_default_color_primary_variant</item>
        <item name="colorOnPrimary">#c1e8ff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9aaebb</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="actionBarForeground">#c1e8ff</item>
        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <!-- For switches -->
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.Switch</item>
        <!-- For buttons -->
        <item name="buttonStyle">@style/Widget.Material3.Button.TextButton</item>
        <!-- Grayed out text color. -->
        <item name="textFillColor">#66FFFFFF</item>
        <!-- Customize your theme here. -->
    </style>
</resources>