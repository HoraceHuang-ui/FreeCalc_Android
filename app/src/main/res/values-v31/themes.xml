<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreeCalc_Material3Test" parent="Base.Theme.FreeCalc_Material3Test">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary70</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_neutral_variant50</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary10</item>
        <item name="calcButtonFontColor">@color/material_dynamic_primary10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_secondary70</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <!-- For switches -->
        <item name="switchStyle">@style/App.Switches</item>
        <!-- For buttons -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <!-- Customize your theme here. -->
        <item name="textFillColor">#66000000</item>
        <item name="outlinedFillColor">@color/white</item>
        <item name="actionBarIconColor">#2a3836</item>
    </style>

    <style name="buttonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="App.Switches" parent="Widget.Material3.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>
</resources>