<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FreeCalc_Material3Test" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4bb6e8</item>
        <item name="colorPrimaryVariant">@color/design_default_color_primary_variant</item>
        <item name="colorOnPrimary">#001e2c</item>
        <item name="calcButtonFontColor">#001e2c</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#9aaebb</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="actionBarForeground">#001e2c</item>
        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <!-- For switches -->
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.Switch</item>
        <!-- For buttons -->
        <item name="buttonStyle">@style/Widget.Material3.Button.TextButton</item>
        <!-- Customize your theme here. -->
        <item name="textFillColor">#66000000</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered</item>
        <item name="outlinedFillColor">@color/white</item>
        <item name="actionBarIconColor">#2a3836</item>
        <item name="popupMenuStyle">@style/Widget.Material3.PopupMenu</item>
    </style>

    <style name="buttonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>
</resources>